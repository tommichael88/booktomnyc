    <script>
    // Contact modal functionality
    var modal = document.getElementById('mycontactModal');
    var btn = document.getElementById('contactBtn');
    var span = document.getElementsByClassName('contactModalClose')[0];

    btn.onclick = function() {
        modal.style.display = 'block';
    }

    span.onclick = function() {
        modal.style.display = 'none';
    }

    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    }

    // Suggested Services functionality
    const suggestedServices = {
        "Minor Home Repairs": ["Drywall repair", "Door repair", "Window repair", "Tile repair"],
        "Furniture": ["Assembly", "Repair", "Moving", "Disassembly"],
        "Wall Mounting": ["TV mounting", "Shelf installation", "Picture hanging", "Mirror installation"],
        "Electrical Help": ["Light fixture installation", "Outlet repair", "Switch replacement", "Ceiling fan installation"],
        "Plumbing Help": ["Faucet repair", "Toilet repair", "Drain cleaning", "Pipe leak repair"],
        "Computer Repairs": ["Virus removal", "Hardware upgrade", "Software installation", "Data recovery"]
    };

    const serviceOptions = document.querySelectorAll('.service-option');
    const serviceOptionsContainer = document.querySelector('.service-options');
    const taskDetails = document.querySelector('.task-details textarea');

    serviceOptions.forEach(option => {
        option.addEventListener('click', function() {
            const selectedService = this.textContent;
            const suggestedList = suggestedServices[selectedService];

            // Hide all service options
            serviceOptions.forEach(opt => opt.style.display = 'none');

            // Create and display suggested services
            const suggestedHTML = `
                <div id="suggestedServices">
                    <h3>Suggested services for ${selectedService}:</h3>
                    <ul>
                        ${suggestedList.map(service => `<li><button onclick="selectSuggestedService('${service}')">${service}</button></li>`).join('')}
                    </ul>
                    <button onclick="goBack()">Go Back</button>
                </div>
            `;
            serviceOptionsContainer.insertAdjacentHTML('afterend', suggestedHTML);
        });
    });

    function selectSuggestedService(service) {
        taskDetails.value += (taskDetails.value ? '\n' : '') + service;
        document.getElementById('suggestedServices').remove();
        serviceOptions.forEach(opt => opt.style.display = '');
    }

    function goBack() {
        document.getElementById('suggestedServices').remove();
        serviceOptions.forEach(opt => opt.style.display = '');
    }
</script>
